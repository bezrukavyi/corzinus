- completed_order = current_person.complete_order
%main.container.general-main-wrap
  = render 'step_nav'

  .text-center.mb-40
    %h3.general-subtitle= t('corzinus.checkouts.complete.thanks_message')
    %p.fw-300= t('corzinus.checkouts.complete.email_confirm', email: current_person.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= t('.order_id', id: completed_order.id)
        %p.general-address.mb-30= completed_order.decorate.created_strf

      = render 'corzinus/addresses/panel', address: completed_order.shipping

    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('.order_id', id: completed_order.id)
      %p.general-address.mb-30= completed_order.decorate.created_strf

    .visible-xs
      = render completed_order.order_items

    .hidden-xs
      = render 'corzinus/order_items/table', order_items: completed_order.order_items

  .text-center.general-text-right
    = render 'corzinus/orders/result_panel', order: completed_order, right: true
