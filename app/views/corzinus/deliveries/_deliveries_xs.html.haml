- deliveries.decorate.each do |delivery|
  .general-cart-item.divider-lg-bottom
    %table.table.delivery-item
      %tr
        %td.col-half
          %span.in-grey-600 Method
        %td.col-half
          .form-group.radio.mt-0.mb-0
            = render 'corzinus/deliveries/delivery_checkbox', delivery: delivery
      %tr
        %td
          %span.in-grey-600= t('corzinus.checkouts.delivery.days').capitalize
        %td
          %span.font-16.fw-300= delivery.duration
      %tr
        %td
          %span.in-grey-600 Price
        %td
          %span.font-16.in-gold-500.delivery-cost
            = currency_price(delivery.price)
